<?xml version="1.0" encoding="UTF-8" ?>
<Component
    xmlns="http://schema.reactant.tech/ui"
    xmlns:layout="http://schema.reactant.tech/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.reactant.tech/ui http://schema.reactant.tech/ui.xsd
    http://schema.reactant.tech/layout http://schema.reactant.tech/layout.xsd"
    type="DetailRootView"
    rootView="true">


    <Container
        field="noView"
        backgroundColor="gray"
        layout:height="169"
        layout:left="super"
        layout:right="super"
        layout:top="super" >
        <ImageView
          field="photoImageView"
          image="NoCamera"
          layout:center="super" />
    </Container>

    <Label
      style=":general:defaultLabel"
      font=":heavy@17"
      field="openingTimesLabel"
      text="Opening Times"
      layout:left="super offset(12)"
      layout:top="noView.bottom offset(32)"/>

      <Label
        field="openTimesLabel"
        font=":heavy@17"
        textColor="red"
        text="Mon-Fri: 11:00 - 23:30"
        layout:right="super inset(12)"
        layout:centerY="openingTimesLabel"/>

        <Container
          backgroundColor="black"
          layout:height="2"
          layout:width="super"
          layout:top="openTimesLabel.bottom offset(24)" >
        </Container>


</Component>
